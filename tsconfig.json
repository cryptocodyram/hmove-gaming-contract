{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./test",
    "./deploy",
    "./scripts",
    "types.ts",
    "deploy/mainnet/01_hMove.ts",
    "deploy/testnet/02_busd.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}